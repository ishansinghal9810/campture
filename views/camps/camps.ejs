<% layout("./layout/boilerplate") %>
    <h1>ALL CAMPS </h1>
    <a href="/camps/new">Add New Camp</a>
    <% for (camp of camps) { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= camp.image %>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= camp.title %></h5>
                        <p class="card-text">
                            <%= camp.description%>
                        </p>
                        <p class="text-muted card-text">
                            <%= camp.location %>
                        </p>
                        <a  href = "/camps/<%=camp._id%>" class="btn btn-primary">View <%= camp.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <%}%>
